<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.EarthFoundation.PlantTreeActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#0b6e04"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>
<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_marginTop="50dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:background="@color/default_circle_indicator_stroke_color"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="2dp"
                android:layout_weight="0.50"
                android:gravity="center_vertical"
                android:text="@string/TreeName"
                android:textColor="@color/cast_expanded_controller_background_color"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/tree_name"
                android:singleLine="true"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="top"
                android:layout_weight="0.50"
                android:background="@color/vpi__bright_foreground_holo_dark"
                android:ems="10"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:background="@color/default_circle_indicator_stroke_color"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="2dp"
                android:layout_weight="0.50"
                android:gravity="center_vertical"
                android:text="@string/Latitude"
                android:textColor="@color/cast_expanded_controller_background_color"
                android:textSize="18sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tvLatitude"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.50"
                android:background="@color/vpi__bright_foreground_holo_dark"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="18sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:background="@color/default_circle_indicator_stroke_color"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="2dp"
                android:layout_weight="0.50"
                android:gravity="center_vertical"
                android:text="@string/Longitude"
                android:textColor="@color/cast_expanded_controller_background_color"
                android:textSize="18sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tvLongitude"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.50"
                android:background="@color/vpi__background_holo_light"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:background="@color/default_circle_indicator_stroke_color"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="2dp"
                android:layout_weight="0.50"
                android:gravity="center_vertical"
                android:text="@string/InMemoryOf"
                android:textColor="@color/cast_expanded_controller_background_color"
                android:textSize="18sp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/InMemory"
                android:singleLine="true"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.50"
                android:background="@color/vpi__bright_foreground_holo_dark"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:background="@color/default_circle_indicator_stroke_color"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="2dp"
                android:layout_weight="0.50"
                android:gravity="center_vertical"
                android:text="@string/Relation"
                android:textColor="@color/cast_expanded_controller_background_color"
                android:textSize="18sp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/relation"
                android:singleLine="true"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.50"
                android:background="@color/vpi__bright_foreground_holo_dark"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:background="@color/default_circle_indicator_stroke_color"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="2dp"
                android:layout_weight="0.50"
                android:gravity="center_vertical"
                android:text="@string/PlantDate"
                android:textColor="@color/cast_expanded_controller_background_color"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/date"
                android:layout_width="0dp"
                android:singleLine="true"
                android:layout_height="40dp"
                android:layout_weight="0.50"
                android:background="@color/vpi__bright_foreground_holo_dark"
                android:gravity="center_vertical"
                android:hint="SELECT DATE"
                android:textColor="@color/black"
                android:textColorHint="#000000"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:background="@color/default_circle_indicator_stroke_color"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="2dp"
                android:layout_weight="0.50"
                android:gravity="center_vertical"
                android:text="@string/Address"
                android:textColor="@color/cast_expanded_controller_background_color"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/tree_address"
                android:layout_width="0dp"
                android:singleLine="true"
                android:layout_height="40dp"
                android:layout_weight="0.50"
                android:background="@color/vpi__bright_foreground_holo_dark"
                android:ems="10"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:background="@color/default_circle_indicator_stroke_color"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="2dp"
                android:layout_weight="0.50"
                android:gravity="center_vertical"
                android:text="@string/Lanmark"
                android:textColor="@color/cast_expanded_controller_background_color"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/tree_landmark"
                android:layout_width="0dp"
                android:singleLine="true"
                android:layout_height="40dp"
                android:layout_weight="0.50"
                android:background="@color/vpi__bright_foreground_holo_dark"
                android:ems="10"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:background="@color/default_circle_indicator_stroke_color"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="2dp"
                android:layout_weight="0.50"
                android:gravity="center_vertical"
                android:text="@string/Image"
                android:textColor="@color/cast_expanded_controller_background_color"
                android:textSize="18sp" />

            <Button
                android:id="@+id/select_image"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.50"
                android:background="@color/vpi__bright_foreground_holo_dark"
                android:gravity="center_vertical"
                android:text="Select Image"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tree_image"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:scaleType="fitXY"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:orientation="horizontal">
                <Button
                    android:id="@+id/btnSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:background="@color/primary_darker"
                    android:ems="5"
                    android:text="@string/submit"
                    android:textColor="@color/primary"
                    android:textSize="18sp" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
</android.support.design.widget.CoordinatorLayout>